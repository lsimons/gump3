<workspace 
    version="0.4" 
    name="test"
    basedir="./work/test" 
    pkgdir="./packages"
    jardir="./jars">

  <property name="build.sysclasspath" value="only"/>
  <profile name="test">
    <module name="gump" debug="true">
      <url href="http://gump.apache.org/"/>
      <cvs repository="gump"/>
      <description>Test Fixture for Gump self-testing</description>

  <project name="ant">
    <home nested="test/packages/ant-1.6.2"/>
    
    <jar name="lib/ant.jar" id="ant"/>
    <jar name="lib/ant-launcher.jar" id="ant-launcher"/>

    <jar name="lib/ant-jmf.jar" id="ant-jmf"/>
    <jar name="lib/ant-junit.jar" id="ant-junit"/>
    <jar name="lib/ant-stylebook.jar" id="ant-stylebook"/>
    <jar name="lib/ant-swing.jar" id="ant-swing"/>
    <jar name="lib/ant-trax.jar" id="ant-trax"/>
    <jar name="lib/ant-nodeps.jar" id="ant-nodeps"/>

    <license name="LICENSE"/>

    <nag from="Gump Self-Test Build &lt;general@gump.apache.org&gt;"
        to="Gump CVS List &lt;cvs@gump.apache.org&gt;"/>
  </project>

  <project name="junit">
    <home nested="test/packages/junit-3.8.1"/>

    <jar name="lib/junit-3.8.1.jar"/>

    <nag from="Gump Self-Test Build &lt;general@gump.apache.org&gt;"
        to="Gump CVS List &lt;cvs@gump.apache.org&gt;"/>
  </project>

  <project name="test1">
    <home nested="test/fixture/test1"/>
    <package>org.apache.gump.test.fixture.test1</package>

    <ant target="jar">
      <property name="noget" value="true"/>
      <property name="final.name" value="test1-@@DATE@@"/>
    </ant>

    <work nested="target/classes"/>
    <jar name="target/test1-@@DATE@@.jar"/>

    <nag from="Gump Self-Test Build &lt;general@gump.apache.org&gt;"
        to="Gump CVS List &lt;cvs@gump.apache.org&gt;"/>
  </project>
    </module>

    <repository name="gump" type="svn">
      <title>Apache Gump</title>
      <home-page>http://gump.apache.org</home-page>
      <cvsweb>http://cvs.apache.org/viewcvs.cgi/gump/?root=Apache-SVN</cvsweb>  
      <url>http://svn.apache.org/repos/asf/gump/</url>
      <redistributable/>
    </repository>

  </profile>

</workspace>
